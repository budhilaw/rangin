{
  "name": "personal-website-theme",
  "version": "1.0.0",
  "description": "A modern WordPress theme for Software Engineers with TailwindCSS",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:admin\"",
    "dev:frontend": "tailwindcss -i ./src/input.css -o ./assets/css/style.css --watch",
    "dev:admin": "tailwindcss -i ./src/admin-theme-options.css -o ./assets/css/admin-theme-options.css --watch",
    "build": "npm run build:frontend && npm run build:admin",
    "build:frontend": "tailwindcss -i ./src/input.css -o ./assets/css/style.css --minify && tailwindcss -i ./src/input.css -o ./assets/css/style.min.css --minify",
    "build:admin": "tailwindcss -i ./src/admin-theme-options.css -o ./assets/css/admin-theme-options.css --minify && tailwindcss -i ./src/admin-theme-options.css -o ./assets/css/admin-theme-options.min.css --minify",
    "build-css-production": "npm run build",
    "build:js": "terser assets/js/main.js -o assets/js/main.min.js -c -m",
    "build:prod": "npm run build && npm run build:js"
  },
  "keywords": [
    "wordpress",
    "theme",
    "tailwindcss",
    "software-engineer",
    "portfolio"
  ],
  "author": "Ericsson Budhilaw",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "concurrently": "^9.2.1",
    "terser": "^5.30.0"
  }
}
